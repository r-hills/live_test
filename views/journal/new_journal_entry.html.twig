<!-- Header twig template -->

{% set vars = {
  'page_title': 'New Journal Entry',
  'css_url': '/css/new_journal_entry.css'
}

%}
{% include 'partials/header.html.twig' with vars %}

    <body>
        <!-- Navbar twig template -->

        {% set active_page = '/journal/new_journal_entry' %}
        {% include 'partials/nav.html' %}

        <div class = "container" id = "mainContainer">

          <div class = "row row-centered" id = "mainRow">

              <div class = "col-xl-8 col-lg-8 col-md-11 col-sm-12 col-sm-offset-1 col-centered mainBody">


                  <h1>{{ date }}</h1>


                  <label for = 'entry'>Today's entry</label>
                  <form action='/journal/save_journal_entry' method='post'>

                    <div class = 'form-group'>

                      <textarea class = 'form-control' rows = '5' id = 'entry' name = 'entry'></textarea>
                        <br>
                        <button type='submit' class = 'btn btn-primary'>Submit</button>

                    </div>

                  </form>

              </div>

          </div>

        </div>

    </body>
</html>
